Q148: Take two structs as input and check if they are identical.

/*
Sample Test Cases:
Input 1:
Student1: Asha 101 90
Student2: Asha 101 90
Output 1:
Same

*/

#include <stdio.h>
#include <string.h>

struct Student {
    char name[50];
    int roll_no;
    int marks;
};

// Function to compare two Student structures
int areStudentsEqual(struct Student s1, struct Student s2) {
    return (strcmp(s1.name, s2.name) == 0) &&
           (s1.roll_no == s2.roll_no) &&
           (s1.marks == s2.marks);
}

int main() {
    struct Student student1, student2;

    // Input first student details
    printf("Enter details of student 1:\n");
    printf("Name: ");
    fgets(student1.name, sizeof(student1.name), stdin);
    student1.name[strcspn(student1.name, "\n")] = '\0';

    printf("Roll No: ");
    scanf("%d", &student1.roll_no);
    printf("Marks: ");
    scanf("%d", &student1.marks);
    getchar(); // clear buffer

    // Input second student details
    printf("\nEnter details of student 2:\n");
    printf("Name: ");
    fgets(student2.name, sizeof(student2.name), stdin);
    student2.name[strcspn(student2.name, "\n")] = '\0';

    printf("Roll No: ");
    scanf("%d", &student2.roll_no);
    printf("Marks: ");
    scanf("%d", &student2.marks);

    // Check if students are identical
    if (areStudentsEqual(student1, student2)) {
        printf("\nSame\n");
    } else {
        printf("\nDifferent\n");
    }

    return 0;
}
