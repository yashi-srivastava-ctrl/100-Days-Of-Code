Q145: Return a structure containing top student's details from a function.

/*
Sample Test Cases:
Input 1:
3 students: Riya 101 89, Karan 102 96, Meena 103 92
Output 1:
Top Student: Karan | Roll: 102 | Marks: 96

*/

#include <stdio.h>

struct Student {
    char name[50];
    int roll_no;
    int marks;
};

// Function returns structure of top student
struct Student findTopper(struct Student students[], int n) {
    int maxIndex = 0;
    for (int i = 1; i < n; i++) {
        if (students[i].marks > students[maxIndex].marks) {
            maxIndex = i;
        }
    }
    return students[maxIndex];
}

int main() {
    int n = 3;
    struct Student students[3];

    // Input for 3 students
    for (int i = 0; i < n; i++) {
        printf("Enter details for student %d:\n", i + 1);
        printf("Name: ");
        fgets(students[i].name, sizeof(students[i].name), stdin);
        students[i].name[strcspn(students[i].name, "\n")] = '\0';
        
        printf("Roll No: ");
        scanf("%d", &students[i].roll_no);
        
        printf("Marks: ");
        scanf("%d", &students[i].marks);
        getchar(); // Clear input buffer
    }

    // Get top student using function
    struct Student topper = findTopper(students, n);

    // Print top student
    printf("\nTop Student: %s | Roll: %d | Marks: %d\n", 
           topper.name, topper.roll_no, topper.marks);

    return 0;
}
