Q96: Reverse each word in a sentence without changing the word order.

/*
Sample Test Cases:
Input 1:
I love coding
Output 1:
I evol gnidoc

*/

#include <stdio.h>
#include <string.h>

void reverseWord(char word[]) {
    int start = 0, end = strlen(word) - 1;
    while (start < end) {
        char temp = word[start];
        word[start] = word[end];
        word[end] = temp;
        start++;
        end--;
    }
}

int main() {
    char sentence[1000];
    fgets(sentence, sizeof(sentence), stdin);

    // Remove newline if present
    sentence[strcspn(sentence, "\n")] = '\0';

    char word[1000];
    int i = 0, j = 0;

    while (1) {
        if (sentence[i] != ' ' && sentence[i] != '\0') {
            word[j++] = sentence[i];
        } else {
            if (j > 0) {
                word[j] = '\0';
                reverseWord(word);
                printf("%s", word);
                j = 0;
            }
            if (sentence[i] == ' ') {
                printf(" ");
            } else if (sentence[i] == '\0') {
                break;
            }
        }
        i++;
    }
    printf("\n");

    return 0;
}
