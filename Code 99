Q99: Change the date format from dd/04/yyyy to dd-Apr-yyyy.

/*
Sample Test Cases:
Input 1:
15/04/2025
Output 1:
15-Apr-2025

*/

#include <stdio.h>
#include <string.h>

int main() {
    char date[20];
    fgets(date, sizeof(date), stdin);

    // Remove newline if present
    date[strcspn(date, "\n")] = '\0';

    char day[3], month[3], year[5];
    sscanf(date, "%2[^/]/%2[^/]/%4s", day, month, year);

    char monthStr[4];

    if (strcmp(month, "04") == 0) {
        strcpy(monthStr, "Apr");
    } else {
        // For simplicity, use the numeric month if not April
        strcpy(monthStr, month);
    }

    printf("%s-%s-%s\n", day, monthStr, year);

    return 0;
}
